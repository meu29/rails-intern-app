<!DOCTYPE html5>
<html>
  <head>
  </head>
  <body>
    <header>
      <p>勤怠管理システム</p>
    </header>
    <main>
      <p><%= @period %>勤怠報告</p>
      <p><%= "所属 " + @department_name %></p> 
      <%= form_tag("/report/" + @user_id, method: :post) do %>
        <table order="1" width="500" cellspacing="0" cellpadding="5" bordercolor="#333333">
          <tr>
            <th>日付</th>
            <th>曜日</th>
            <th>開始時刻</th>
            <th>終了時刻</th>
            <th>休憩時間</th>
            <th>稼働時間</th>
          </tr>
          <% @report_data_array.each do |report_data| %>
            <tr>
              <% report_data.keys.each do |key| %>
                <% if report_data[key].class == Time %>
                  <td><%= report_data[key].strftime("%H:%M") %></td>               
                <% else %>
                  <td><%= report_data[key] %></td>
                <% end %>
              <% end %>
            </tr>
          <% end %>
        </table>    
      <% end %>
      <%= form_tag("/report/" + @user_id) do %>
        <%= hidden_field_tag :operation, "キャンセル" %>
        <%= submit_tag "キャンセル" %>
      <% end %>
    </main>
  </body>
</html>
