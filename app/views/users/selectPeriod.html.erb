<!DOCTYPE html5>
<html>
  <head>
  </head>
  <body>
    <header>
      <p>勤怠管理システム</p>
    </header>
    <main>
      <p>氏名: <%= @user_name %></p>
      <p>所属: <%= @department_name %></p>
      <% if @maneger_flag == true %>
        <%= form_tag("/users", method: :get) do %>
          <%= select_tag "period", options_for_select(@period_array) %>
          <%= submit_tag "報告者を検索" %>
        <% end %>
      <% else %>
        <%= form_tag("/report/" + @user_id, method: :get) do %>
          <%= select_tag "period", options_for_select(@period_array) %>
          <%= submit_tag "報告編集画面を表示" %>
        <% end %>
      <% end %>
      <form action="/logout" method="post">
        <input type="submit" value="ログアウト">
      </form>
    </main>
  </body>
</html>